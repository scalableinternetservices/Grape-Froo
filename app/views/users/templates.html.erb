<% provide(:title, "#{@user_str} Templates") %>
<%= render "tabs" %>
<div class="row">
  <% @templates.each do |template| %>
    <div class="col-xs-6 col-sm-4 col-md-3 card">
      <div class="thumbnail">
        <%= link_to(image_tag(template.image.url, :class => "card-img"),
               template, :title => template.name) %>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="text-center">
      <%= will_paginate @templates, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
<% content_for :footerjs do %>
<script type="text/javascript">
$("#user-templates").addClass("active");
</script>
<% end %>
