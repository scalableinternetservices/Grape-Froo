<% provide(:title, "Templates") %>
<% if notice %><p id="notice"><%= notice %></p> <% end %>
<div class="row">
  <div class="col-md-4">
    <h2>Templates&nbsp;
      <%= link_to 'New Template', new_template_path, :class => "btn btn-default"%>
    </h2>
  </div>
  <div class="col-md-8">
    <form>
      <div class="form-group">
        <input type="text" class="form-control" id="template-search" placeholder="Search templates">
      </div>
      <button type="submit" class="btn btn-default" id="template-search-button">Submit</button>
    </form>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    <% @templates.each do |template| %>
      <div class="col-xs-6 col-sm-4 col-md-3 card">
        <div class="thumbnail">
          <%= link_to(image_tag(template.url, :class => "template-img"),
                      template, :title => template.name) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% content_for :footerjs do %>
  <script type="text/javascript">
    $("#nav-templates").addClass("active");
  </script>
<% end %>
