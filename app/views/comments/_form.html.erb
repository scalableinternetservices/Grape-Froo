<%= form_for(comment) do |f| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.hidden_field :meme_id, value: comment.meme.id %>
    <%= f.hidden_field :user_id, value: comment.user.id %>
  </div>

  <% if @comment.parent %>
    <div>
      In response to: <%= @comment.parent.message %>
      <%= f.hidden_field :parent_id, value: comment.parent.id %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :message %>
    <%= f.text_area :message %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
