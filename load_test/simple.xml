<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="www.google.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="10" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="10" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="10" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="10" unit="second">
      <users arrivalrate="8" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <!-- Home Page -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
      <thinktime vale="2" random="true"></thinktime>

      <!-- Sign Up Page -->
      <request>
        <http url='/users/sign_up' version='1.1' method='GET'></http>
      </request>
      <thinktime vale="2" random="true"></thinktime>

      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="random_user_number" />
      </setdynvars>

      <request subst="true">
        <http
          url='/users'
          version='1.1'
          metod='POST'
          contents='utf8=%E2%9C%93&amp;user%5Busername%5D=tsungtest&user%5Bemail%5D=tsungtest%40gmail.com&user%5Bpassword%5D=tsungtest&user%5Bpassword_confirmation%5D=tsungtest&commit=Sign+up'>
        </http>
      </request>

      <!-- Sign In Page -->
      <request>
        <http url='/users/sign_in' version='1.1' method='GET'></http>
      </request>
      <thinktime vale="2" random="true"></thinktime>

      <request subst="true">
        <http
          url='/users/sign_in'
          version='1.1'
          metod='POST'
          contents='utf8=%E2%9C%93&authenticity_token=IhqysrDecFglr3pwWTS5gDR908kE%2FCSV71PlGkUDZ8EBxFeypR%2B4AK%2B5DJYf8AzZHNb7pJgAmMDEq4SIyssq%2Bg%3D%3D&user%5Blogin%5D=tsungtest&user%5Bpassword%5D=tsungtest&user%5Bremember_me%5D=0&commit=Log+in'>
        </http>
      </request>


    </session>
  </sessions>
</tsung>